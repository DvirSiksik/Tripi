<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text appearances -->
    <style name="TextAppearance.Tripi.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Tripi.Headline6.Dark" parent="TextAppearance.Tripi.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Tripi.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button style -->
    <style name="Widget.Tripi.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Card style -->
    <style name="Widget.Tripi.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Other component styles can go here -->
</resources>