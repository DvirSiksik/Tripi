<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Tripi.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="TextAppearance.Tripi.Headline6.Dark" parent="TextAppearance.Tripi.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.Tripi.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.Tripi.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.Tripi.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/blue_600</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="Widget.Tripi.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">12dp</item>
    </style>
    <style name="Widget.Tripi.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="strokeColor">@color/blue_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="Widget.Tripi.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="Widget.Tripi.Card.Trip" parent="Widget.Tripi.Card">
        <item name="cardBackgroundColor">@color/trip_card_background</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="Widget.Tripi.ScheduleHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/schedule_header</item>
        <item name="android:textColor">@color/blue_800</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Tripi.EventTime" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/event_time</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="Widget.Tripi.Divider" parent="android:Widget">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
    <style name="Widget.Tripi.Card.Dark" parent="Widget.Tripi.Card">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="strokeColor">@color/card_stroke_dark</item>
    </style>
    <style name="Widget.Tripi.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="Widget.Tripi.TextInputLayout.OutlinedBox.Dense" parent="Widget.Tripi.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="Widget.Tripi.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="rippleColor">@color/blue_200</item>
    </style>
    <style name="Widget.Tripi.Button.Dark" parent="Widget.Tripi.Button">
        <item name="backgroundTint">@color/blue_700</item>
    </style>
    <style name="Widget.Tripi.Button.Text.Dark" parent="Widget.Tripi.Button.Text">
        <item name="android:textColor">@color/blue_300</item>
        <item name="rippleColor">@color/blue_500</item>
    </style>
    <style name="Widget.Tripi.Button.Outlined.Dark" parent="Widget.Tripi.Button.Outlined">
        <item name="android:textColor">@color/blue_300</item>
        <item name="strokeColor">@color/blue_300</item>
        <item name="backgroundTint">@color/gray_800</item>
    </style>
    <style name="Widget.Tripi.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/blue_600</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">8dp</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
        <item name="pressedTranslationZ">16dp</item>
    </style>
</resources>